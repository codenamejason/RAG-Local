# Pure Local RAG Configuration
# Copy this file to .env and customize if needed
# Everything works with defaults - no configuration required!

# ============================================
# Ollama Configuration
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest
OLLAMA_LLM_MODEL=tinyllama:latest

# ============================================
# LanceDB Configuration  
# ============================================
LANCEDB_DATA_DIR=./data/lancedb

# ============================================
# Chunking Configuration
# ============================================
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# ============================================
# Performance Settings
# ============================================
BATCH_SIZE=100
MAX_WORKERS=4

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
DEBUG=false